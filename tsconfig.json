{
  "compilerOptions": {
    /* Target & module */
    "target": "ES2020",
    "module": "commonjs",

    /* Output layout */
    "rootDir": "src",
    "outDir": "dist",

    /* Interop & utils */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,

    /* Hygiene */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
